# WPASK Environment Configuration
# Copy this file to .env and fill in your values
#
# SECURITY WARNING:
# This file will contain sensitive credentials.
# NEVER commit .env to version control!

# ============================================================================
# SFTP CONFIGURATION (for publishing releases)
# ============================================================================

# SFTP server hostname
SFTP_HOST=repo.adjuvans.fr

# SFTP username
SFTP_USER=wpask

# SFTP password (leave empty if using SSH key authentication)
SFTP_PASS=

# Remote path for uploads (must end with /)
SFTP_PATH=/wpask/

# SFTP port (default: 22)
SFTP_PORT=22
